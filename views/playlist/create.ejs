<div class="container">
    <form method="post" action="/playlist/store" name="create_form">
        <div class="row cant d-flex justify-content-center align-items-center playlist">
            <div class="col-md-6">
                <div style="" class="p-5 card">
                    <input type="text" name="title" class="form-control title" value="" maxlength="20" placeholder="제목을 입력해주세요" required>
                    <iframe class="play_frame"
                        src="https://www.youtube.com/embed/"
                        title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; 
                            clipboard-write; encrypted-media;
                            gyroscope; picture-in-picture" allowfullscreen style="width:100%;
                            height:100%;"></iframe>
                </div>

            </div>
            <div class="col-md-6">
                <div class="p-5 card">
                    <div class="d-flex justify-content-center align-items-center p-3 music">
                        <div class="d-flex flex-column align-items-center">
                            <i class="fa fa-music color"></i>
                        </div>
                        <i class="fa fa-check color"></i>
                    </div>
                    <input type="url" name="music[]" class="form-control required"  aria-describedby="basic-addon3"
                        placeholder="유튜브 URL 전체를 입력해주세요" required>
                    <input type="url" name="music[]" class="form-control mt-3" aria-describedby="basic-addon3"
                        placeholder="유튜브 URL 전체를 입력해주세요">
                    <input type="url" name="music[]" class="form-control mt-3" aria-describedby="basic-addon3"
                        placeholder="유튜브 URL 전체를 입력해주세요">
                    <input type="url" name="music[]" class="form-control mt-3" aria-describedby="basic-addon3"
                        placeholder="유튜브 URL 전체를 입력해주세요">
                    <input type="url" name="music[]" class="form-control mt-3" aria-describedby="basic-addon3"
                        placeholder="유튜브 URL 전체를 입력해주세요">
                </div>
            </div>
        </div>

        <button class="mt-4 btn btn-success btn-block text-uppercase" type="submit">등록</button>

        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
    </form>
</div>
